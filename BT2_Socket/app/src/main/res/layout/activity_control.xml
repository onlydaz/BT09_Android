<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thiết bị đang kết nối"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/textViewMAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ MAC"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:id="@+id/btnTb1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/tb1on"
        app:layout_constraintTop_toBottomOf="@+id/textViewMAC"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"/>

    <ImageButton
        android:id="@+id/btnTb1Off"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/tb1off"
        app:layout_constraintTop_toBottomOf="@+id/textViewMAC"
        app:layout_constraintStart_toEndOf="@id/btnTb1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"/>

    <ImageButton
        android:id="@+id/btnTb2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/tb7on"
        app:layout_constraintTop_toBottomOf="@+id/btnTb1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"/>

    <ImageButton
        android:id="@+id/btnTb2Off"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/tb7off"
        app:layout_constraintTop_toBottomOf="@+id/btnTb1Off"
        app:layout_constraintStart_toEndOf="@id/btnTb2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btnTb2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:id="@+id/btnDisc"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/btnotconnect"
        app:layout_constraintTop_toBottomOf="@+id/textV1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
